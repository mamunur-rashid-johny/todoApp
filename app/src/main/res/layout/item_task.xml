<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/task_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/task_check_box"
        android:layout_alignBottom="@id/task_check_box"
        android:layout_toEndOf="@id/task_check_box"
        android:ellipsize="end"
        android:fontFamily="@font/edu_semi_bold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        android:textSize="20sp"
        tools:text="Dummy text title shows here" />

</RelativeLayout>


